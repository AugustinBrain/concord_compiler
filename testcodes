empty multiply(){
int a = 1, b = 2, c = 3;
int mult; 
mult = a * b * c;
display("result: " + mult);
}

empty divide(){
int a = 1, b = 2, c = 3;
int div;
div = a / b / c;
display("result: " + div);
}

empty add(){
int a = 1, b = 2, c = 3;
int add;
add = a + (b + c);
display("result: " + add);
}

empty subtract(){
int a = 1, b = 2, c = 3;
int sub;
sub = (a - b) - c;
display("result: " + sub);
}

main(){
	int choice;
	display("1 - Multiplication  2 - Division  3 - Addition  4 - Subtraction");
	display("Choose Operation: ");
	choice = 1;
	
	if (choice == 1){
		multiply();
	}
	elseif (choice == 2){
		divide();
	}
	elseif (choice == 3){
		add();
	}
	elseif (choice == 4){
		subtract();
	}
}

