main(){
    int choice, rows;

    display("Enter a number (6-Triangle, 7-Reverse Triangle, 8-Middle Triangle, 9-Square, 10-Rectangle): ");
    choice = 6;

    if (choice == 6){
        triangle();
    }
    elseif (choice == 7){
        reverseTriangle();
    }
    elseif (choice == 8){
        middleTriangle();
    }
    elseif (choice == 9){
        square();
    }
    elseif (choice == 10){
        rectangle();
    }
    else{
        display("Invalid choice.");
    }
}

main() {
    int length, width, area;

    display("Enter length: ");
    length = reads();

    display("Enter width: ");
    width = reads();

    area = length * width;

    display("Area of Rectangle " + area);
}

main() {
    int length, width, perimeter;

    display("Enter the length: ");
    length = 2;

    display("Enter width: ");
    width = 3;

    perimeter = 2 * (length + width);

    display("Perimeter of Rectangle: " + perimeter);
}

main() {
    int number;

    display("Enter an integer: ");
    number = 2;

    if ((number % 2) == 0){
        display("is Even.");
    }

    else{
        display("is Odd.");
    }
    
}

main() {
    int year;

    display("Enter a year: ");
    year = 2022;

    if ((year % 4 == 0 && year % 100 != 0) || (year % 400 == 0)){
        display("is a Leap Year.: " + year);
    }
    else{
        display("is NOT a Leap Year.: " + year);
    }
}



